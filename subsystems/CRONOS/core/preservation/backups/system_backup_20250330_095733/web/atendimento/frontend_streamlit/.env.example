# Configurações do Streamlit
STREAMLIT_THEME_BASE="light"
STREAMLIT_THEME_PRIMARY_COLOR="#6366f1"
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS="0.0.0.0"

# Configurações da API
API_URL="http://localhost:8000"
API_VERSION="v1"

# Configurações do Sistema
SYSTEM_NAME="EVA Atendimento"
SYSTEM_VERSION="1.0.0"
SYSTEM_DESCRIPTION="Automatize seu WhatsApp com Amor e Ética"

# Configurações de Métricas
MIN_LOVE_QUOTIENT=85
MIN_CONSCIOUSNESS_LEVEL=90
MIN_ETHICS_LEVEL=95

# Configurações de Segurança
ENCRYPTION_ENABLED=true
PRIVATE_MODE=false
PROTECTION_LEVEL="Intermediário"

# Configurações de Logging
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Substitua os valores acima com suas próprias configurações
# Não commite o arquivo .env com valores sensíveis! 