# EVA & GUARANI - NEXUS Environment Variables
# Version: 1.0.0

# Application
APP_NAME=NEXUS
APP_VERSION=1.0.0
APP_ENV=development  # development, staging, production
APP_DEBUG=true
APP_PORT=3000
APP_HOST=localhost
APP_URL=http://localhost:3000
APP_SECRET_KEY=your-secret-key-here

# Python
PYTHON_ENV=development
PYTHONPATH=/path/to/nexus
PYTHON_VERSION=3.10

# Node.js
NODE_ENV=development
NODE_VERSION=18.0.0
NODE_PATH=/path/to/node_modules

# Database
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nexus_db
DB_USER=nexus_user
DB_PASSWORD=your-password-here
DB_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# MongoDB
MONGO_URI=mongodb://localhost:27017/nexus
MONGO_USER=nexus_user
MONGO_PASSWORD=your-mongo-password
MONGO_AUTH_SOURCE=admin

# API
API_VERSION=v1
API_PREFIX=/api/v1
API_TIMEOUT=30
API_RATE_LIMIT=100
API_RATE_WINDOW=60

# Security
JWT_SECRET=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE=3600
JWT_REFRESH_TOKEN_EXPIRE=604800
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/nexus.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
SENTRY_DSN=your-sentry-dsn
OPENTELEMETRY_ENDPOINT=http://localhost:4317

# Machine Learning
ML_MODEL_PATH=models
ML_CACHE_PATH=cache
ML_BATCH_SIZE=32
ML_LEARNING_RATE=0.001
ML_EPOCHS=100
ML_DEVICE=cpu

# Visualization
VIZ_THEME=quantum
VIZ_COLOR_PRIMARY=#6B46C1
VIZ_COLOR_SECONDARY=#38B2AC
VIZ_COLOR_ACCENT=#D53F8C
VIZ_COLOR_BACKGROUND=#1A202C
VIZ_COLOR_TEXT=#E2E8F0

# Analysis
ANALYSIS_MAX_FILE_SIZE=10485760
ANALYSIS_MAX_MEMORY=4GB
ANALYSIS_TIMEOUT=300
ANALYSIS_BATCH_SIZE=100
ANALYSIS_PARALLEL_PROCESSES=4

# Documentation
DOCS_PATH=docs
DOCS_THEME=quantum
DOCS_LANGUAGE=en
DOCS_AUTO_GENERATE=true

# Testing
TEST_ENV=testing
TEST_DB_NAME=nexus_test
TEST_COVERAGE_MIN=95
TEST_PARALLEL=true

# Quantum Computing
QUANTUM_BACKEND=aer_simulator
QUANTUM_SHOTS=1000
QUANTUM_OPTIMIZATION_LEVEL=3

# Paths
ROOT_PATH=/path/to/nexus
CONFIG_PATH=config
MODELS_PATH=models
CACHE_PATH=cache
LOGS_PATH=logs
TEMP_PATH=temp

# External Services
GITHUB_TOKEN=your-github-token
CURSOR_API_KEY=your-cursor-api-key
OPENAI_API_KEY=your-openai-api-key

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=nexus@example.com

# Caching
CACHE_TYPE=redis
CACHE_PREFIX=nexus
CACHE_TTL=3600
CACHE_NULL_TTL=300

# Compression
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
COMPRESSION_ALGORITHM=zstd

# Websockets
WS_ENABLED=true
WS_PATH=/ws
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=10

# Static Files
STATIC_PATH=static
STATIC_URL=/static
MEDIA_PATH=media
MEDIA_URL=/media

# Frontend
FRONTEND_PATH=web/frontend
FRONTEND_BUILD_PATH=web/frontend/build
FRONTEND_PUBLIC_PATH=web/frontend/public

# Backend
BACKEND_PATH=web/backend
BACKEND_HOST=localhost
BACKEND_PORT=8000

# Integration
INTEGRATION_TIMEOUT=30
INTEGRATION_RETRY_COUNT=3
INTEGRATION_RETRY_DELAY=5

# Optimization
OPTIMIZATION_LEVEL=2
OPTIMIZATION_MEMORY_LIMIT=4GB
OPTIMIZATION_TIME_LIMIT=300

# Development
DEV_DEBUG=true
DEV_RELOAD=true
DEV_PROFILE=false
DEV_COVERAGE=true

# Production
PROD_DEBUG=false
PROD_RELOAD=false
PROD_WORKERS=4
PROD_TIMEOUT=30

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System under maintenance"
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1 