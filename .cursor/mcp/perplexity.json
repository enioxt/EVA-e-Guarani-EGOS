{
    "mcpServers": {
        "perplexity": {
            "command": "npx",
            "args": [
                "-y",
                "perplexity-mcp"
            ],
            "type": "stdio",
            "env": {
                "DEBUG": "*",
                "NODE_ENV": "development",
                "NODE_DEBUG": "net,stream,module,http",
                "NO_COLOR": "1",
                "FORCE_COLOR": "0"
            },
            "windowsHide": true
        }
    }
}
